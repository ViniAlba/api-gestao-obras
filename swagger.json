{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gestão de Obras",
    "version": "1.0.0",
    "description": "API RESTful para gerenciar empreiteiras, engenheiros, clientes, trabalhadores e obras, utilizando TypeORM e autenticação JWT."
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "Servidor Principal"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "AuthRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "example": "fulano@exemplo.com" },
          "password": { "type": "string", "example": "senha123" }
        },
        "required": ["email", "password"]
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Fulano de Tal" },
          "email": { "type": "string", "example": "fulano@exemplo.com" },
          "password": { "type": "string", "example": "senha123" }
        },
        "required": ["name", "email", "password"]
      },
      "TokenResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string", "example": "Login realizado com sucesso." },
          "token": { "type": "string", "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." },
          "userData": {
            "type": "object",
            "properties": {
              "id": { "type": "integer", "example": 1 },
              "name": { "type": "string", "example": "Fulano de Tal" },
              "email": { "type": "string", "example": "fulano@exemplo.com" },
              "role": { "type": "string", "example": "viewer" }
            }
          }
        }
      },
      "Cliente": {
        "type": "object",
        "properties": {
          "idCliente": { 
            "type": "integer", 
            "readOnly": true,
            "example": 1
          },
          "nome": { "type": "string", "example": "Comércio de Materiais Silva" },
          "endereco": { "type": "string", "example": "Av. Paulista, 1000, São Paulo - SP" },
          "telefone": { "type": "string", "example": "(11) 98888-7777" },
          "cpfCnpj": { "type": "string", "example": "12.345.678/0001-90" },
          "rgIe": { "type": "string", "example": "123.456.789.111" }
        }
      },
      "Empreiteira": {
        "type": "object",
        "properties": {
          "idEmp": { 
            "type": "integer", 
            "readOnly": true,
            "example": 1
          },
          "cnpjCpf": { "type": "string", "example": "98.765.432/0001-00" },
          "nome": { "type": "string", "example": "Construtora Horizonte Ltda" },
          "telefone": { "type": "string", "example": "(11) 3333-4444" },
          "email": { "type": "string", "example": "contato@horizonte.com.br" },
          "fundacao": { "type": "string", "format": "date", "example": "2010-05-15" },
          "licencas": { 
            "type": "array", 
            "items": { "type": "string" },
            "example": ["Alvará Municipal 2025", "Licença Ambiental"]
          }
        }
      },
      "Engenheiro": {
        "type": "object",
        "properties": {
          "idEngenheiro": { 
            "type": "integer", 
            "readOnly": true,
            "example": 1
          },
          "nome": { "type": "string", "example": "Eng. Carlos Alberto" },
          "telefone": { "type": "string", "example": "(11) 99999-1234" },
          "endereco": { "type": "string", "example": "Rua das Projetos, 50, São Paulo - SP" },
          "crea": { "type": "string", "example": "123456/SP" },
          "certificacoesAdicionais": { 
            "type": "array",
            "items": { "type": "string" },
            "example": ["PMP", "Segurança do Trabalho"]
          }
        }
      },
      "Obra": {
        "type": "object",
        "properties": {
          "idObra": { 
            "type": "integer", 
            "readOnly": true,
            "example": 1
          },
          "idCliente": { "type": "integer", "example": 1 },
          "idEngenheiro": { "type": "integer", "example": 1 },
          "tipoobra": { "type": "string", "example": "Residencial Multifamiliar" },
          "enderecoobra": { "type": "string", "example": "Rua da Obra Nova, 100, Campinas - SP" },
          "dataInicio": { "type": "string", "format": "date", "example": "2025-02-01" },
          "prevTermino": { "type": "string", "format": "date", "example": "2026-02-01" },
          "valorTotal": { "type": "number", "example": 500000.00 },
          "formaPagamento": { "type": "string", "example": "Entrada + 10 parcelas" },
          "status": { "type": "string", "example": "execução" },
          "alvarasLicencas": { 
            "type": "array", 
            "items": { "type": "string" },
            "example": ["Alvará de Construção 2025"]
          },
          "contrato": { "type": "string", "example": "CTR-2025/001" }
        }
      },
      "Trabalhador": {
        "type": "object",
        "properties": {
          "idEmpregado": { 
            "type": "integer", 
            "readOnly": true,
            "example": 1
          },
          "idGerente": { 
            "type": "integer", 
            "nullable": true,
            "description": "ID do superior imediato. Se mantido como 'null' (ou omitido), o trabalhador será considerado um Gerente/Diretor (sem superior).",
            "example": null
          },
          "nome": { "type": "string", "example": "José da Silva" },
          "cpfCnpj": { "type": "string", "example": "111.222.333-44" },
          "rgie": { "type": "string", "example": "12.345.678-9" },
          "salario": { "type": "number", "example": 3500.00 },
          "ctps": { "type": "string", "example": "123456/0010" },
          "funcao": { "type": "string", "example": "Mestre de Obras" }
        }
      }
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Login do usuário e geração de JWT",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AuthRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TokenResponse" }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Registra um novo usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RegisterRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário registrado com sucesso"
          },
          "400": {
            "description": "Dados inválidos ou email já em uso"
          }
        }
      }
    },
    "/clientes": {
      "get": {
        "tags": ["Clientes"],
        "summary": "Lista todos os clientes",
        "parameters": [
          {
            "in": "query",
            "name": "pagina",
            "schema": { "type": "integer" }
          },
          {
            "in": "query",
            "name": "limite",
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Cliente" }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "total": { "type": "integer" },
                        "paginaAtual": { "type": "integer" },
                        "limite": { "type": "integer" },
                        "totalPaginas": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Clientes"],
        "summary": "Cria um novo cliente",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Cliente" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente criado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          }
        }
      }
    },
    "/clientes/{id}": {
      "get": {
        "tags": ["Clientes"],
        "summary": "Busca um cliente pelo ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente encontrado"
          },
          "404": {
            "description": "Cliente não encontrado"
          }
        }
      },
      "put": {
        "tags": ["Clientes"],
        "summary": "Atualiza um cliente",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Cliente" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cliente atualizado com sucesso"
          },
          "404": {
            "description": "Cliente não encontrado"
          }
        }
      },
      "delete": {
        "tags": ["Clientes"],
        "summary": "Remove um cliente",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "204": {
            "description": "Cliente removido com sucesso"
          },
          "404": {
            "description": "Cliente não encontrado"
          },
          "400": {
            "description": "Não é possível excluir: Cliente possui obras vinculadas"
          }
        }
      }
    },
    "/empreiteiras": {
      "get": {
        "tags": ["Empreiteiras"],
        "summary": "Lista todas as empreiteiras",
        "responses": {
          "200": {
            "description": "Lista de empreiteiras",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array", "items": { "$ref": "#/components/schemas/Empreiteira" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Empreiteiras"],
        "summary": "Cria uma nova empreiteira",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Empreiteira" }
            }
          }
        },
        "responses": {
          "201": { "description": "Empreiteira criada com sucesso" }
        }
      }
    },
    "/empreiteiras/{id}": {
      "get": {
        "tags": ["Empreiteiras"],
        "summary": "Busca uma empreiteira pelo ID",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Empreiteira encontrada" },
          "404": { "description": "Empreiteira não encontrada" }
        }
      },
      "put": {
        "tags": ["Empreiteiras"],
        "summary": "Atualiza uma empreiteira",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Empreiteira" }
            }
          }
        },
        "responses": {
          "200": { "description": "Empreiteira atualizada com sucesso" },
          "404": { "description": "Empreiteira não encontrada" }
        }
      },
      "delete": {
        "tags": ["Empreiteiras"],
        "summary": "Remove uma empreiteira",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Empreiteira removida com sucesso" },
          "404": { "description": "Empreiteira não encontrada" },
          "400": { "description": "Não é possível excluir: Empreiteira possui vínculos" }
        }
      }
    },
    "/engenheiros": {
      "get": {
        "tags": ["Engenheiros"],
        "summary": "Lista todos os engenheiros",
        "responses": {
          "200": {
            "description": "Lista de engenheiros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Engenheiro" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Engenheiros"],
        "summary": "Cadastra um novo engenheiro",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Engenheiro" }
            }
          }
        },
        "responses": {
          "201": { "description": "Engenheiro cadastrado com sucesso" }
        }
      }
    },
    "/engenheiros/{id}": {
      "get": {
        "tags": ["Engenheiros"],
        "summary": "Busca um engenheiro pelo ID",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Engenheiro encontrado" },
          "404": { "description": "Engenheiro não encontrado" }
        }
      },
      "put": {
        "tags": ["Engenheiros"],
        "summary": "Atualiza um engenheiro",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Engenheiro" }
            }
          }
        },
        "responses": {
          "200": { "description": "Engenheiro atualizado com sucesso" },
          "404": { "description": "Engenheiro não encontrado" }
        }
      },
      "delete": {
        "tags": ["Engenheiros"],
        "summary": "Remove um engenheiro",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Engenheiro removido com sucesso" },
          "404": { "description": "Engenheiro não encontrado" },
          "400": { "description": "Não é possível excluir: Engenheiro está vinculado a obras" }
        }
      }
    },
    "/obras": {
      "get": {
        "tags": ["Obras"],
        "summary": "Lista todas as obras",
        "parameters": [
          { "in": "query", "name": "status", "schema": { "type": "string" } },
          { "in": "query", "name": "idCliente", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Lista de obras" }
        }
      },
      "post": {
        "tags": ["Obras"],
        "summary": "Cria uma nova obra",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Obra" }
            }
          }
        },
        "responses": {
          "201": { "description": "Obra criada com sucesso" }
        }
      }
    },
    "/obras/{id}": {
      "get": {
        "tags": ["Obras"],
        "summary": "Busca uma obra pelo ID",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Obra encontrada" },
          "404": { "description": "Obra não encontrada" }
        }
      },
      "put": {
        "tags": ["Obras"],
        "summary": "Atualiza uma obra",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Obra" }
            }
          }
        },
        "responses": {
          "200": { "description": "Obra atualizada com sucesso" },
          "404": { "description": "Obra não encontrada" },
          "400": { "description": "Dados inválidos (ex: Cliente/Engenheiro não existe)" }
        }
      },
      "delete": {
        "tags": ["Obras"],
        "summary": "Remove uma obra",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Obra removida com sucesso" },
          "404": { "description": "Obra não encontrada" }
        }
      }
    },
    "/trabalhadores": {
      "get": {
        "tags": ["Trabalhadores"],
        "summary": "Lista todos os trabalhadores",
        "responses": {
          "200": {
            "description": "Lista de trabalhadores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array", "items": { "$ref": "#/components/schemas/Trabalhador" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Trabalhadores"],
        "summary": "Cadastra um novo trabalhador",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Trabalhador" }
            }
          }
        },
        "responses": {
          "201": { "description": "Trabalhador cadastrado com sucesso" }
        }
      }
    },
    "/trabalhadores/{id}": {
      "get": {
        "tags": ["Trabalhadores"],
        "summary": "Busca um trabalhador pelo ID",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Trabalhador encontrado" },
          "404": { "description": "Trabalhador não encontrado" }
        }
      },
      "put": {
        "tags": ["Trabalhadores"],
        "summary": "Atualiza um trabalhador",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Trabalhador" }
            }
          }
        },
        "responses": {
          "200": { "description": "Trabalhador atualizado com sucesso" },
          "404": { "description": "Trabalhador não encontrado" }
        }
      },
      "delete": {
        "tags": ["Trabalhadores"],
        "summary": "Remove um trabalhador",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Trabalhador removido com sucesso" },
          "404": { "description": "Trabalhador não encontrado" },
          "400": { "description": "Não é possível excluir: Trabalhador é gerente de outros" }
        }
      }
    }
  }
}